{
  "name": "mefa-working",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:e2e": "jest tests/e2e/mefa.test.js",
    "build:cf": "next build && npx @cloudflare/next-on-pages",
    "dev:cf": "wrangler pages dev --compatibility-date=2024-09-28 --compatibility-flag=nodejs_compat -- npm run dev",
    "deploy:cf": "wrangler pages deploy .vercel/output/static",
    "db:init": "wrangler d1 create mefa-db",
    "db:migrate": "wrangler d1 execute mefa-db --local --file=./prisma/migrations/init.sql",
    "db:migrate:prod": "wrangler d1 execute mefa-db --file=./prisma/migrations/init.sql"
  },
  "dependencies": {
    "@prisma/client": "^6.16.2",
    "@radix-ui/react-progress": "^1.0.3",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-tabs": "^1.0.4",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "lucide-react": "^0.294.0",
    "next": "14.3.0",
    "next-intl": "^3.26.5",
    "prisma": "^6.16.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^2.1.0",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@cloudflare/next-on-pages": "^1.13.16",
    "@playwright/test": "^1.55.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.57.0",
    "eslint-config-next": "^15.5.4",
    "jest": "^30.1.3",
    "playwright": "^1.55.1",
    "postcss": "^8.4.32",
    "puppeteer": "^24.22.2",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3",
    "wrangler": "^4.40.2"
  }
}
